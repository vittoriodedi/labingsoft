{# colonna contenitore per la card #}
<div class="col-12 col-lg-6 mb-3">
    {# la card #}
    <div class="bg-white p-3 shadow">
        {# prima riga della card con giorno #}
        <div class="row">
            <div class="col-12 d-flex justify-content-between align-items-center">
                <div>{{ forecast.day | date('l') }}</div>
                <div>{{ forecast.day | date('d M') }}</div>
            </div>
            {# seconda / terza riga con meteo e temperatura #}
            <div class="col-12 col-lg-6">
                <div class="row">
                    <div class="col-6">{{ forecast.shortDescription }}</div>
                    <div class="col-6">
                        <div class="fs-5">
                            {% if forecast.minimumCelsiusTemperature %}
                                {{ forecast.minimumCelsiusTemperature }}
                            {% else %}
                                &mdash;
                            {% endif %}
                            °C
                        </div>
                        <div class="fs-5">
                            {% if forecast.maximumCelsiusTemperature %}
                                {{ forecast.maximumCelsiusTemperature }}
                            {% else %}
                                &mdash;
                            {% endif %}
                            °C
                        </div>
                    </div>
                </div>
            </div>
            {# terza / quarta riga con i dettagli #}
            <div class="col-12 col-lg-6 mt-3">
                <div class="row">
                    <div class="col-6 fw-bold">{{ 'forecast.wind' | trans }}</div>
                    <div class="col-6">
                        {% if forecast.windSpeedKmh %}
                            {{ forecast.windSpeedKmh }}
                        {% else %}
                            &mdash;
                        {% endif %}
                    </div>
                </div>
                <div class="row">
                    <div class="col-6 fw-bold">{{ 'forecast.humidity' | trans }}</div>
                    <div class="col-6">
                        {% if forecast.humidityPercentage %}
                            {{ forecast.humidityPercentage }}
                        {% else %}
                            &mdash;
                        {% endif %}
                    </div>
                </div>
                <div class="row">
                    <div class="col-6 fw-bold">{{ 'forecast.wind_speed' | trans }}</div>
                    <div class="col-6">
                        {% if forecast.windSpeedKmh %}
                            {{ forecast.windSpeedKmh }}
                        {% else %}
                            &mdash;
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>